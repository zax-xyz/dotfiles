@import "config"

configuration {
	modi: "drun,run,filebrowser,window";
	show-icons: true;
  display-drun: "󰕰";
  display-run: "";
  display-filebrowser: "";
  display-window: "";
}

inputbar {
  children: [ "search", "mode-switcher" ];
  background-color: transparent;
  spacing: 1em;
}

search {
  orientation: horizontal;
  background-color: rgba(24, 24, 37, 0.8);
  border-radius: 4px;
  children: ["textbox-prompt", "entry"];
}

textbox-prompt {
  content: "";
  expand: false;
  background-color: var(lavender);
  padding: 0.375em 18px 0.375em 12px;
}

button {
  width: 2em;
  text-color: @text;
  vertical-align: 0.5;
}

button selected {
  background-color: @lavender;
  text-color: @bg;
}

listview {
  flow: horizontal;
  columns: 5;
  lines: 4;
  fixed-height: true;
  fixed-columns: true;
  spacing: 0.5em;
}

element {
  padding: 0.75em;
  spacing: 4px;
  orientation: vertical;
  border: 0 0 1px;
}

element selected {
  background-color: var(lavender);
  text-color: var(bg);
}

element-icon {
  size: 2.5em;
}

element-text {
  horizontal-align: 0.5;
  font: "Nunito 11";
}
