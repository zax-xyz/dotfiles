    ~/.scripts/pyramid.sh

ctrl + {shift + space,grave,shift+period,shift+comma}
    dunstctl {close,history-pop,context,action}

super + alt + {_,shift + }n
    pkill -SIGUSR{1,2} dunst

ctrl + shift + space
    ulauncher-toggle
