# download youtube video as mp3
alias yta="youtube-dl -x --audio-format 'mp3' --output '%(title)s.%(ext)s'"

# sometimes i forget the shell isn't vim
alias :q="exit"

# get to external storage devices easier
alias cdm="cd /run/media/$USER"

