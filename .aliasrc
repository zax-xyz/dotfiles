alias gcsmsg="g commit -S -m"
alias gp="g push"
alias gpf="g push --force-with-lease"
alias gpff="g push --force"
alias gpl="g pull"
alias gd="g diff"
alias gl="g log"
alias glo="gl --oneline"
alias glpo='gl --pretty="%C(Yellow)%h  %C(auto)%ad (%C(Green)%cr%C(auto)) %C(Cyan)%an: %C(auto)%s" --date=short'
